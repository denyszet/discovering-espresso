<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:id="@+id/notifications_send"
        android:key="notifications_send"
        android:title="@string/pref_title_send_notifications"/>

    <Preference
        android:id="@+id/notifications_with_delay_send"
        android:key="notifications_with_delay_send"
        android:title="@string/pref_title_send_notifications_with_delay"/>

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <SwitchPreference
        android:id="@+id/notifications_message"
        android:defaultValue="false"
        android:key="notifications_new_message"
        android:title="@string/pref_title_new_message_notifications"/>

    <com.example.android.architecture.blueprints.todoapp.settings.SliderPreference
        android:id="@+id/notifications_slider"
        android:defaultValue="@string/slider_default"
        android:dialogMessage="@string/slider_optional_message"
        android:key="notifications_slider"
        android:summary="@array/slider_summaries"
        android:title="@string/slider_title" />

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <RingtonePreference
        android:id="@+id/notifications_ringtone"
        android:defaultValue="content://settings/system/notification_sound"
        android:key="notifications_new_message_ringtone"
        android:ringtoneType="notification"
        android:title="@string/pref_title_ringtone" />

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <CheckBoxPreference
        android:id="@+id/notifications_vibrate"
        android:defaultValue="true"
        android:key="notifications_new_message_vibrate"
        android:title="@string/pref_title_vibrate" />

</PreferenceScreen>
